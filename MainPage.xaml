        <!--A gomb mérete kitölti a képernyőt alul-->
        <Button Text="Új játék" Clicked="UjjatekClick" FontFamily="Showcard Gothic" FontAttributes="Bold" TextColor="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
