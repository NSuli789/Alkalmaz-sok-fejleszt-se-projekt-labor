                    <GradientStop  Color="#FF64E411" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button Text="Kilépés" Clicked="ExitClick" FontFamily="Showcard Gothic" FontAttributes="Bold" TextColor="White">
            <Button.Background>
